// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  sex        SexEnum
  birth_date String
  created_at DateTime
  updated_at DateTime

  messages Message[]
}

model Message {
  id         Int      @id @default(autoincrement())
  message    String
  created_at DateTime

  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}

enum SexEnum {
  Men
  Woman
  Other
}
